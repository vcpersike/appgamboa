<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-0 ma-0" Style="width: 100%;">
    <MudDivider />
    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-10">
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudText Typo="Typo.h5" Class="mb-4">AppGamboa</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">
                    Ateliê de software especializado em soluções .NET,
                    seguindo princípios de Domain-Driven Design e SOLID.
                </MudText>
                <div class="d-flex gap-2">
                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Dark" Size="Size.Small" />
                    <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Primary" Size="Size.Small" />
                    <MudIconButton Icon="@Icons.Custom.Brands.Twitter" Color="Color.Info" Size="Size.Small" />
                </div>
            </MudItem>

            <MudItem xs="12" sm="6" md="2">
                <MudText Typo="Typo.h6" Class="mb-4">Navegação</MudText>
                <div>
                    <MudNavLink Href="#">Home</MudNavLink>
                    <MudNavLink Href="#philosophy">Filosofia</MudNavLink>
                    <MudNavLink Href="#projects">Projetos</MudNavLink>
                    <MudNavLink Href="#contact">Contato</MudNavLink>
                </div>
            </MudItem>

            <MudItem xs="12" sm="6" md="2">
                <MudText Typo="Typo.h6" Class="mb-4">Serviços</MudText>
                <div>
                    <MudNavLink>Desenvolvimento Web</MudNavLink>
                    <MudNavLink>Aplicativos Móveis</MudNavLink>
                    <MudNavLink>Consultoria</MudNavLink>
                    <MudNavLink>Treinamento</MudNavLink>
                </div>
            </MudItem>

            <MudItem xs="12" sm="6" md="2">
                <MudText Typo="Typo.h6" Class="mb-4">Legal</MudText>
                <div>
                    <MudNavLink>Termos de Uso</MudNavLink>
                    <MudNavLink>Política de Privacidade</MudNavLink>
                    <MudNavLink>Cookies</MudNavLink>
                </div>
            </MudItem>

            <MudItem xs="12" sm="6" md="2">
                <MudText Typo="Typo.h6" Class="mb-4">Contato</MudText>
                <div>
                    <div class="d-flex gap-2 align-center mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Small" />
                        <MudText>contato@appgamboa.com.br</MudText>
                    </div>
                    <div class="d-flex gap-2 align-center mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.Phone" Size="Size.Small" />
                        <MudText>+55 (11) 99999-9999</MudText>
                    </div>
                    <div class="d-flex gap-2 align-center mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" />
                        <MudText>São Paulo, SP</MudText>
                    </div>
                </div>
            </MudItem>
        </MudGrid>

        <MudDivider Class="my-6" />

        <MudText Align="Align.Center" Typo="Typo.body2">
            &copy; @DateTime.Now.Year AppGamboa. Todos os direitos reservados.
        </MudText>
    </MudContainer>
</MudContainer>