<MudContainer MaxWidth="MaxWidth.Large" Class="my-16">
    <MudGrid Spacing="5" Justify="Justify.Center">
        <MudItem xs="12" md="5" Class="d-flex flex-column">
            <MudGrid Spacing="2">
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem> 
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem>
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem>
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="12" md="7">
            <MudText Typo="Typo.h5" GutterBottom="true">@Company?.Title</MudText>
            <MudText Typo="Typo.body1">
                @Company?.FullDescription
            </MudText>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter]
    public CompanyDetails Company { get; set; } = new CompanyDetails // Default para evitar null refs no design
    {
        Title = "О компании",
        FullDescription = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.", // Exemplo
        ImageUrls = new List<string> { "_content/AppGamboaSite.Shared/image/img_02.png", "_content/AppGamboaSite.Shared/image/img_02.png" } //Exemplo de imagens
    };
}