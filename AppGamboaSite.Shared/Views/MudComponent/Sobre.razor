<MudContainer MaxWidth="MaxWidth.Large" Class="my-16">
    <MudGrid Spacing="5" Justify="Justify.Center">
        <MudItem xs="12" md="5" Class="d-flex flex-column">
            <MudGrid Spacing="2">
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem> 
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem>
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem>
                <MudItem xs="6">
                    <MudImage Src="@(Company?.ImageUrls?.ElementAtOrDefault(0) ?? "_content/AppGamboaSite.Shared/image/img_02.png")" Alt="Company Image 1" Class="rounded" Fluid="true" Style="height:200px; object-fit:cover;" />
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="12" md="7">
            <MudText Typo="Typo.h5" GutterBottom="true">@Company?.Title</MudText>
            <MudText Typo="Typo.body1">
                @Company?.FullDescription
            </MudText>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter]
    public CompanyDetails Company { get; set; } = new CompanyDetails
    {
        Title = "Soluções",
        FullDescription = "Apresentação de soluções",
        ImageUrls = new List<string> { "_content/AppGamboaSite.Shared/image/img_02.png", "_content/AppGamboaSite.Shared/image/img_02.png" } //Exemplo de imagens
    };
}