<MudContainer MaxWidth="MaxWidth.Large" Class="my-16">
    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true" Class="mb-8">Projetos Desenvolvidos</MudText>

    @if (FeaturedProject != null)
    {
        <MudPaper Elevation="0" Class="mb-8 pa-4" Style="background-color: #333; color: white;">
            <MudGrid Spacing="0" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudItem xs="12" md="5" Class="pa-4">
                    <MudText Typo="Typo.h3" GutterBottom="true">@FeaturedProject.Title</MudText>
                    <MudText Typo="Typo.body1">@FeaturedProject.Description</MudText>
                    <MudButton Variant="Variant.Outlined" Color="Color.Inherit" Class="mt-4">Узнать больше</MudButton>
                </MudItem>
                <MudItem xs="12" md="7">
                    <MudImage Src="@FeaturedProject.ImageUrl" Alt="@FeaturedProject.Title" Fluid="true" Class="rounded" Style="max-height: 350px; object-fit: cover; width: 100%;" />
                </MudItem>
            </MudGrid>
        </MudPaper>
    }

    <MudGrid Spacing="3">
        @foreach (var project in OtherProjects)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2">
                    <MudCardMedia Image="@project.ImageUrl" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h6">@project.Title</MudText>
                        <MudText Typo="Typo.body2">@project.Description</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Подробнее</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    [Parameter]
    public List<ProjectInfo> AllProjects { get; set; } = new List<ProjectInfo>
    {
        new ProjectInfo { Id = 1, Title = "Ecommecer", Description = "Современный центр для отдыха и развлечений.", ImageUrl = "_content/AppGamboaSite.Shared/image/img_02.png" },
        new ProjectInfo { Id = 2, Title = "CRM", Description = "Комфортабельные квартиры в зеленом районе.", ImageUrl = "_content/AppGamboaSite.Shared/image/img_02.png" },
        new ProjectInfo { Id = 3, Title = "RPA", Description = "Офисные помещения класса А.", ImageUrl = "_content/AppGamboaSite.Shared/image/img_02.png" },
    };

    private ProjectInfo FeaturedProject => AllProjects?.FirstOrDefault(p => p.IsFeatured);
    private IEnumerable<ProjectInfo> OtherProjects => AllProjects?.Where(p => !p.IsFeatured).Take(3);
}