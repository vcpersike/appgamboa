@using AppGamboaSite.ViewModels
@using AppGamboaSite.Shared.Models
@inject IButtonService ButtonService

<MudButton @onclick="HandleClick" Variant="Variant.Filled" Color="Color.Primary">
    @ViewModel.Button.Text
</MudButton>

@code {
    [Parameter]
    public ButtonViewModel ViewModel { get; set; }

    private void HandleClick()
    {
        Console.WriteLine("Botão clicado!");
    }

    protected override async Task OnInitializedAsync()
    {
        ViewModel ??= new ButtonViewModel(ButtonService);

        await ViewModel.LoadButtonText();
        StateHasChanged();
    }
}
